generator zod {
  provider              = "zod-prisma"
  output                = "../src/server/schema/generated"
  relationModel         = true
  modelCase             = "PascalCase"
  modelSuffix           = "Model"
  useDecimalJs          = true
  prismaJsonNullability = true
}

